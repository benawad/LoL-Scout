<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.benawad.lolscout" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="benawad.com.lolscout.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="benawad.com.lolscout.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="benawad.com.lolscout.RankedChampionStatsActivity"
            android:label="@string/title_activity_ranked_champion_stats"
            android:screenOrientation="portrait"
            android:parentActivityName="benawad.com.lolscout.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="benawad.com.lolscout.MainActivity" />
        </activity>
    </application>

</manifest>
